<div class="container">
<%= form_for(@article) do |f| %>
  <div class="field">
    <%= f.label :title %> <br>
    <%= f.text_area :title %> <br>
    <%= f.label :body %> <br>
    <%= f.text_area :body %> <br>
    <%= f.collection_select :category_id, Category.all, :id, :title %>

    <div class="actions"> 
    <%= f.submit "Create" %> 
  </div> 
  <% end %>

  </div>